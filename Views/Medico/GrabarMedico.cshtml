@model AppMVC_Core_BDCLINICA.Models.Medico

@{
    ViewData["Title"] = "GrabarMedico";
}

<h1>GrabarMedico</h1>

<h4>Medico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GrabarMedico">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Codmed" class="control-label"></label>
                <input asp-for="Codmed" class="form-control" />
                <span asp-validation-for="Codmed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Codesp" class="control-label"></label>
                <select asp-for="Codesp" class ="form-control" 
                        asp-items="ViewBag.ESPECIALIDADES"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nommed" class="control-label"></label>
                <input asp-for="Nommed" class="form-control" />
                <span asp-validation-for="Nommed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnioColegio" class="control-label"></label>
                <input asp-for="AnioColegio" class="form-control" />
                <span asp-validation-for="AnioColegio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coddis" class="control-label"></label>
                <select asp-for="Coddis" class ="form-control" 
                        asp-items="ViewBag.DISTRITOS"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Grabar Medico" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListarMedicos">Regresar al Listado</a> 
    <br/>
    @Html.ActionLink("Retornar al Listado", "ListarMedicos")
</div>

<br/>
<div>
    <h3>@ViewBag.MENSAJE</h3>
</div>>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
